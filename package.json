{
  "name": "microdoc",
  "version": "0.4.0",
  "description": "Minimalist zero-config zero-build project documentation web apps.",
  "repository": "maxmilton/microdoc",
  "homepage": "https://microdoc.js.org",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "microdoc.js",
  "files": [
    "microdoc.*",
    "plugin"
  ],
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "stylelint --ignore-path .gitignore '**/*.{css,xcss}'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf plugin microdoc.* || true",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm -r \"$PWD\"/test/setup.ts test '\\.test\\.ts$'",
    "test:e2e": "node -r tsm test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "^0.0.43",
    "fuse.js": "^6.6.2",
    "remarkable": "^2.0.1",
    "stage1": "^0.6.2"
  },
  "devDependencies": {
    "@maxmilton/stylelint-config": "0.0.12",
    "@types/node": "18.15.11",
    "@types/remarkable": "2.0.3",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "c8": "7.13.0",
    "ekscss": "0.0.13",
    "esbuild": "0.17.16",
    "esbuild-minify-templates": "0.10.0",
    "esbuild-plugin-ekscss": "0.0.13",
    "eslint": "8.38.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unicorn": "46.0.0",
    "get-port": "6.1.2",
    "happy-dom": "9.1.7",
    "kleur": "4.1.5",
    "lightningcss": "1.19.0",
    "nanospy": "0.5.0",
    "pirates": "4.0.5",
    "playwright-chromium": "1.32.3",
    "prettier": "2.8.7",
    "prettier-plugin-pkg": "0.17.1",
    "sirv": "2.0.2",
    "stylelint": "15.4.0",
    "stylelint-config-standard": "32.0.0",
    "terser": "5.16.8",
    "tsm": "2.3.0",
    "typescript": "5.0.4",
    "uvu": "0.5.6"
  }
}
