{
  "name": "microdoc",
  "version": "0.0.5",
  "description": "Minimalist zero-config zero-build project documentation web app runtime",
  "repository": "MaxMilton/microdoc",
  "homepage": "https://maxmilton.github.io/microdoc",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "NODE_ENV=production yarn node build.mjs",
    "dev": "NODE_ENV=development yarn node build.mjs",
    "lint": "yarn lint:css && yarn lint:js && yarn lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --noEmit",
    "postbuild": "tsc --emitDeclarationOnly",
    "prebuild": "rm -rf dist; mkdir -p dist/plugins",
    "serve": "sirv . --dev --cors",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'"
  },
  "dependencies": {
    "@ekscss/framework": "^0.0.9",
    "remarkable": "^2.0.1",
    "stage1": "^0.0.7"
  },
  "devDependencies": {
    "@types/jsdom": "16.2.10",
    "@types/node": "15.3.0",
    "@types/remarkable": "2.0.1",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "c8": "7.7.2",
    "ekscss": "0.0.6",
    "esbuild": "0.11.23",
    "esbuild-minify-templates": "0.4.0",
    "esbuild-plugin-ekscss": "0.0.2",
    "esbuild-register": "2.5.0",
    "eslint": "7.26.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.2",
    "jsdom": "16.5.3",
    "pirates": "4.0.1",
    "prettier": "2.3.0",
    "prettier-plugin-pkg": "0.9.0",
    "prettier-plugin-sh": "0.6.1",
    "sirv-cli": "1.0.11",
    "terser": "5.7.0",
    "typescript": "4.2.4",
    "uvu": "0.5.1"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
