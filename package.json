{
  "name": "microdoc",
  "version": "0.2.5",
  "description": "Minimalist zero-config zero-build project documentation web apps.",
  "repository": "maxmilton/microdoc",
  "homepage": "https://microdoc.js.org",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "microdoc.js",
  "files": [
    "microdoc.*",
    "plugin"
  ],
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "echo 'TODO: CSS linting'",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test",
    "prebuild": "rm -rf plugin microdoc.* || true",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r tsm test '\\.test\\.ts$'",
    "test-e2e": "node -r tsm test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "^0.0.31",
    "fuse.js": "^6.4.6",
    "remarkable": "^2.0.1",
    "stage1": "^0.0.13"
  },
  "devDependencies": {
    "@types/csso": "4.2.0",
    "@types/jsdom": "16.2.13",
    "@types/node": "16.11.7",
    "@types/remarkable": "2.0.3",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "c8": "7.10.0",
    "csso": "4.2.0",
    "dset": "3.1.1",
    "ekscss": "0.0.10",
    "esbuild": "0.13.13",
    "esbuild-minify-templates": "0.7.0",
    "esbuild-plugin-ekscss": "0.0.7",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "15.0.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-unicorn": "38.0.1",
    "get-port": "6.0.0",
    "jsdom": "18.1.0",
    "kleur": "4.1.4",
    "pirates": "4.0.1",
    "playwright-chromium": "1.16.3",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-sh": "0.7.1",
    "sirv": "1.0.18",
    "terser": "5.9.0",
    "tsm": "2.1.4",
    "typescript": "4.4.4",
    "uvu": "0.5.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ],
    "overrides": [
      {
        "files": [
          "*.html",
          "*.md"
        ],
        "options": {
          "singleQuote": false,
          "trailingComma": "none"
        }
      }
    ]
  }
}
