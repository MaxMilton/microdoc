{
  "name": "microdoc",
  "version": "0.0.9",
  "description": "Minimalist zero-config zero-build project documentation web apps.",
  "repository": "MaxMilton/microdoc",
  "homepage": "https://maxmilton.github.io/microdoc",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "main": "dist/microdoc.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pnpm run prebuild && NODE_ENV=production node build.mjs && pnpm run postbuild",
    "dev": "NODE_ENV=development node build.mjs",
    "lint": "pnpm run lint:css && pnpm run lint:js && pnpm run lint:ts",
    "lint:css": "echo 'TODO: CSS linting'; exit 0",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.js,.mjs,.cjs .",
    "lint:ts": "tsc --project test --noEmit",
    "postbuild": "tsc --emitDeclarationOnly",
    "prebuild": "rm -rf dist; mkdir -p dist/plugins",
    "serve": "sirv . --dev --cors",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'",
    "test-e2e": "node -r esbuild-register test/e2e/index.ts"
  },
  "dependencies": {
    "@ekscss/framework": "^0.0.19",
    "remarkable": "^2.0.1",
    "stage1": "^0.0.8"
  },
  "devDependencies": {
    "@types/csso": "4.2.0",
    "@types/jsdom": "16.2.13",
    "@types/node": "15.12.2",
    "@types/remarkable": "2.0.3",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "@typescript-eslint/parser": "4.28.3",
    "c8": "7.7.3",
    "csso": "4.2.0",
    "ekscss": "0.0.8",
    "esbuild": "0.12.15",
    "esbuild-minify-templates": "0.5.0",
    "esbuild-plugin-ekscss": "0.0.4",
    "esbuild-register": "2.6.0",
    "eslint": "7.31.0",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-unicorn": "34.0.1",
    "jsdom": "16.6.0",
    "kleur": "4.1.4",
    "pirates": "4.0.1",
    "playwright-chromium": "1.12.3",
    "prettier": "2.3.2",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-sh": "0.7.1",
    "sirv": "1.0.12",
    "sirv-cli": "1.0.12",
    "terser": "5.7.1",
    "typescript": "4.3.5",
    "uvu": "0.5.1"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
