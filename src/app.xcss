/*
* Framework package extracts (too heavy to include the whole files)
*/

#app {
  .con { #apply: .con; }
  .df { #apply: .df; }
  .dfc { #apply: .dfc; }
  .dib { #apply: .dib; }
  .f-col { #apply: .f-col; }
  .fss { #apply: .fss; }
  .ml-auto { #apply: .ml-auto; }
  .mt5 { #apply: .mt5; }
  .muted { #apply: .muted; }
  .mv-1 { #apply: .mv-1; }
  .mv0 { #apply: .mv0; }
  .pa2 { #apply: .pa2; }
