{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": true,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "verbatimModuleSyntax": true,

    "alwaysStrict": false, // prefer injecting "use strict" manually

    // TODO: Remove when lightningcss fix their package.json#exports
    "resolvePackageJsonExports": false
  },
  "exclude": [
    "coverage",
    "node_modules",
    "plugin",
    "test",
    "types",
    "microdoc.*",
    "xcss.config.cjs"
  ]
}
